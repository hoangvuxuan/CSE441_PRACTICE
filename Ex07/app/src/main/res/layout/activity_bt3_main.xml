<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- EditText để nhập thông số A -->
    <EditText
        android:id="@+id/edtB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập thông số A"
        android:inputType="number"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- EditText để nhập thông số B -->
    <EditText
        android:id="@+id/editTextB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập thông số B"
        android:inputType="number"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Button để yêu cầu kết quả -->
    <Button
        android:id="@+id/btnrequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yêu cầu kết quả"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- TextView để hiển thị kết quả -->
    <TextView
        android:id="@+id/edtkq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kết quả sẽ hiển thị ở đây"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:padding="8dp" />

</LinearLayout>
